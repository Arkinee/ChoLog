<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_box"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="@dimen/widget_margin"
    android:background="@color/colorWidgetBackground"
    android:orientation="horizontal"
    android:weightSum="12">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_modu"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10dp"
                android:text="@string/tv_widget_until_next"
                android:textColor="@color/colorWidgetUntilNext"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="14dp"

                android:src="@drawable/ic_right_arrow" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:id="@+id/tv_widget_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="18dp"
                android:textColor="@color/colorWidgetDay2"
                android:textSize="19sp"
                android:textStyle="bold"
                tools:text="D-34" />


            <TextView
                android:id="@+id/tv_widget_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:textSize="15sp"
                tools:text="12,000ì›" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>

