<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/sign_up_verify_iv_back"
        android:layout_width="35dp"
        android:layout_height="33dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:src="@drawable/icon_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sign_up_verify_tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/spoqahansans_neo_bold"
        android:lineSpacingExtra="10sp"
        android:text="@string/sign_up_tv_sign_up_verify_tv_top"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.175" />

    <EditText
        android:id="@+id/sign_up_verify_edt_phone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:fontFamily="@font/spoqahansans_neo_bold"
        android:gravity="start|center"
        android:hint="@string/sign_up_tv_sign_up_verify_hint_phone"
        android:inputType="phone"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textColor="@color/colorSignUpEdt"
        android:textColorHint="@color/colorSignUpEdtNameHint"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_verify_send_code"
        app:layout_constraintEnd_toStartOf="@+id/sign_up_verify_send_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sign_up_verify_send_code" />

    <TextView
        android:id="@+id/sign_up_verify_send_code"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/src_sign_up_verify_inactivate"
        android:fontFamily="@font/spoqahansans_neo_bold"
        android:gravity="center"
        android:text="@string/sign_up_tv_sign_up_verify_tv_send_verify_code"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="59:28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.046"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32" />

    <View
        android:id="@+id/sign_up_view_phone"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorBorder"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_verify_edt_phone"
        app:layout_constraintStart_toStartOf="@+id/sign_up_verify_edt_phone"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_verify_edt_phone" />

    <EditText
        android:id="@+id/sign_up_verify_edt_code"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:fontFamily="@font/spoqahansans_neo_bold"
        android:gravity="start|center"
        android:hint="@string/sign_up_tv_sign_up_verify_hint_code"
        android:inputType="phone"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textColor="@color/colorSignUpEdt"
        android:textColorHint="@color/colorSignUpEdtNameHint"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_verify_tv_complete"
        app:layout_constraintEnd_toStartOf="@+id/sign_up_verify_tv_complete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sign_up_verify_tv_complete" />

    <TextView
        android:id="@+id/sign_up_verify_tv_complete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/src_sign_up_verify_inactivate"
        android:fontFamily="@font/spoqahansans_neo_bold"
        android:gravity="center"
        android:text="@string/sign_up_tv_sign_up_verify_tv_verify_complete"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="59:28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.046"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4484" />

    <View
        android:id="@+id/sign_up_view_phone_code"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorBorder"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_verify_edt_code"
        app:layout_constraintStart_toStartOf="@+id/sign_up_verify_edt_code"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_verify_edt_code" />

</androidx.constraintlayout.widget.ConstraintLayout>