<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/colorConcept"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_item_product_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        tools:src="@drawable/ic_default" />

    <TextView
        android:id="@+id/tv_item_product_service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:letterSpacing="-0.04"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/colorTextProduct"
        android:textSize="16sp"
        tools:text="@string/tv_look_tool_adobe" />

    <TextView
        android:id="@+id/tv_item_product_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/colorTextProduct"
        android:textSize="14sp" />

</LinearLayout>