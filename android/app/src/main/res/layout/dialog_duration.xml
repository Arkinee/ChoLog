<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="5">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">

        <TextView
            android:id="@+id/tv_dialog_duration_complete"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/colorConceptPrimary"
            android:gravity="center"
            android:text="@string/tv_service_dialog_last"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <NumberPicker
                android:id="@+id/picker_duration_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:divider="@drawable/src_dialog_divider"
                android:layout_marginEnd="18dp"/>

            <NumberPicker
                android:id="@+id/picker_duration_per"
                app:divider="@drawable/src_dialog_divider"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>