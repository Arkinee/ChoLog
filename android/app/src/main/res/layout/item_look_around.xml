<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/colorTextLookItemBack"
    android:gravity="center_vertical"
    android:paddingStart="32dp"
    android:paddingEnd="32dp"
    android:orientation="horizontal">

    <ImageView
        android:contentDescription="@string/tv_look_description"
        android:id="@+id/iv_item_look_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        tools:src="@drawable/ic_default" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_look_service_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:letterSpacing="-0.04"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorTextLookService"
            android:textSize="16sp"
            tools:text="@string/tv_look_tool_adobe" />

        <TextView
            android:id="@+id/tv_item_look_category"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorTextLookCategory"
            android:textSize="14sp"
            tools:text="@string/category_cloud" />

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_item_look_service_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:textColor="@color/colorTextLookFee"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="@string/tv_look_tool_fee" />

    <ImageView
        android:contentDescription="@string/tv_look_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:paddingTop="3dp"
        android:layout_marginStart="5dp"
        android:paddingBottom="4dp"
        android:visibility="gone"
        android:src="@drawable/ic_right_arrow" />


</LinearLayout>