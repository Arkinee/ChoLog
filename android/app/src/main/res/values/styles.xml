<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorConceptPrimary</item>
        <item name="colorPrimaryDark">@color/colorConceptPrimary</item>
        <item name="colorAccent">@color/colorConceptPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppTheme.AppBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorConcept</item>
        <item name="colorPrimaryDark">@color/colorConcept</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/colorConceptPrimary</item>
    </style>

    <style name="dialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AnimationDialogPopUp">
        <item name="android:windowEnterAnimation">@anim/dialog_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_down</item>
    </style>

    <style name="picker_divider" parent="@android:style/Widget.DeviceDefault.DatePicker">
        <item name="android:divider">@color/colorConceptPrimary</item>
    </style>

</resources>
